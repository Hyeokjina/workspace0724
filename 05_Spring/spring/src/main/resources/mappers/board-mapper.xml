<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kh.spring.model.mapper.BoardMapper">

    <!-- Board 객체 맵핑 -->
    <resultMap id="boardResultMap" type="Board">
        <result column="BOARD_NO" property="boardNo"/>
        <result column="BOARD_TYPE" property="boardType"/>
        <result column="CATEGORY_NO" property="categoryNo"/>
        <result column="BOARD_TITLE" property="boardTitle"/>
        <result column="BOARD_CONTENT" property="boardContent"/>
        <result column="BOARD_WRITER" property="boardWriter"/>
        <result column="COUNT" property="count"/>
        <result column="CREATE_DATE" property="createDate"/>
        <result column="STATUS" property="status"/>
        <result column="CATEGORY_NAME" property="categoryName"/>
        <result column="MEMBER_ID" property="memberId"/>
        <result column="THUMBNAIL_IMG" property="thumbnailImg"/>
    </resultMap>

    <!-- 전체 게시글 수 조회 -->
    <select id="selectAllBoardCount" resultType="_int">
        SELECT COUNT(*) AS COUNT
        FROM BOARD B
        WHERE B.BOARD_TYPE = 1
        AND STATUS = 'Y'
    </select>


    <!-- 전체 게시글 조회 -->
    <select id="selectAllBoard" resultMap="boardResultMap">
        SELECT B.BOARD_NO,
        C.CATEGORY_NAME,
        B.BOARD_TITLE,
        M.MEMBER_ID,
        B.COUNT,
        TO_CHAR(B.CREATE_DATE, 'YYYY-MM-DD') AS "CREATE_DATE"
        FROM BOARD B
        JOIN CATEGORY C USING(CATEGORY_NO)
        JOIN MEMBER M ON(B.BOARD_WRITER = M.MEMBER_NO)
        WHERE B.STATUS = 'Y'
        AND B.BOARD_TYPE = 1
        ORDER BY B.BOARD_NO DESC
    </select>



</mapper>
